<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--首页抽屉item的样式-->
    <style name="item_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">@dimen/common_item_height</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--抽屉item 图片的样式-->
    <style name="item_icon_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/common_padding_screen</item>
        <item name="android:layout_marginEnd">@dimen/common_padding_screen</item>
    </style>

    <!--抽屉item文字样式-->
    <style name="item_textview_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/common_textsize_28px</item>
        <item name="android:textColor">@color/commonTextColor</item>
    </style>

    <!--通用水平分割线-->
    <style name="divider_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/dividerColor</item>
    </style>

    <!--通用垂直分割线-->
    <style name="divider_vertical">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/dividerColor</item>
    </style>

</resources>
