<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_card_height"
    android:layout_marginEnd="@dimen/common_padding_screen_half"
    android:layout_marginStart="@dimen/common_padding_screen_half"
    android:layout_marginTop="@dimen/common_padding_top"
    android:orientation="vertical"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/common_card_radius"
    app:cardPreventCornerOverlap="true"
    tools:ignore="RelativeOverlap,ContentDescription">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/card_iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_card_img_height"
            android:src="@drawable/ic_load_data"
            tools:background="@android:color/white" />

        <TextView
            android:id="@+id/play_times_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/card_iv"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="2dp"
            android:drawablePadding="2dp"
            android:drawableStart="@drawable/bangumi_common_ic_video_views"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/common_padding_top"
            android:paddingStart="@dimen/common_padding_top"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/common_textsize_24px"
            tools:text="23.5W" />

        <TextView
            android:id="@+id/comments_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/card_iv"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@id/play_times_tv"
            android:drawablePadding="2dp"
            android:drawableStart="@drawable/bangumi_common_ic_video_danmakus"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/common_textsize_24px"
            tools:text="181.5W" />

        <TextView
            android:id="@+id/length_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/card_iv"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="@dimen/common_padding_screen"
            android:paddingEnd="@dimen/common_padding_top"
            android:paddingStart="@dimen/common_padding_top"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/common_textsize_24px"
            tools:text="08:25" />

        <TextView
            android:id="@+id/card_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_iv"
            android:layout_marginEnd="@dimen/common_padding_screen_half"
            android:layout_marginStart="@dimen/common_padding_screen_half"
            android:layout_marginTop="@dimen/common_padding_top"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/commonTextColor"
            android:textSize="@dimen/common_textsize_28px"
            tools:ignore="RelativeOverlap"
            tools:text="震惊：小五居然把妹妹给......" />

        <TextView
            android:id="@+id/card_ad_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_margin="7dp"
            android:background="@drawable/stoke_rect_round_grey"
            android:paddingBottom="1dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="1dp"
            android:text="@string/ad"
            android:textColor="@color/commonTextColorLignt"
            android:textSize="@dimen/common_textsize_24px"
            android:visibility="invisible"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/card_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/card_ad_tv"
            android:paddingBottom="@dimen/common_padding_top"
            android:paddingTop="@dimen/common_padding_top"
            android:textColor="@color/commonTextColorLignt"
            android:textSize="@dimen/common_textsize_24px"
            android:visibility="invisible"
            tools:text="只要998，纸片人老婆带回家"
            tools:visibility="visible" />


        <TextView
            android:id="@+id/card_tag_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="@dimen/common_padding_top"
            android:paddingEnd="@dimen/common_padding_screen_half"
            android:paddingStart="@dimen/common_padding_screen_half"
            android:paddingTop="@dimen/common_padding_top"
            android:textColor="@color/commonTextColorLignt"
            android:textSize="@dimen/common_textsize_24px"
            tools:text="东方·MMD"
            tools:visibility="invisible" />

        <ImageView
            android:id="@+id/more_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:paddingBottom="@dimen/common_padding_top"
            android:paddingEnd="@dimen/common_padding_screen_half"
            android:paddingStart="@dimen/common_padding_screen_half"
            android:paddingTop="@dimen/common_padding_top"
            android:src="@drawable/ic_more_gray" />

    </RelativeLayout>


</android.support.v7.widget.CardView>