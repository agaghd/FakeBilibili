<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.design.widget.CollapsingToolbarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/mainThemeColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/web_back_iv"
                android:layout_width="@dimen/common_action_bar_height"
                android:layout_height="@dimen/common_action_bar_height"
                android:scaleType="centerInside"
                android:src="@drawable/ic_back_home"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/web_exit_iv"
                android:layout_width="@dimen/common_action_bar_height"
                android:layout_height="@dimen/common_action_bar_height"
                android:scaleType="centerInside"
                android:src="@drawable/abc_ic_clear_mtrl_alpha"
                tools:ignore="ContentDescription" />


            <TextView
                android:id="@+id/web_title_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/common_textsize_32px"
                tools:text="Faker" />

            <ImageView
                android:id="@+id/web_share_iv"
                android:layout_width="@dimen/common_action_bar_height"
                android:layout_height="@dimen/common_action_bar_height"
                android:layout_marginEnd="@dimen/common_padding_screen_half"
                android:layout_marginStart="@dimen/common_padding_screen_half"
                android:scaleType="centerInside"
                android:src="@drawable/ic_webview_share"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/web_more_iv"
                android:layout_width="@dimen/common_action_bar_height"
                android:layout_height="@dimen/common_action_bar_height"
                android:layout_marginEnd="@dimen/common_padding_screen_half"
                android:layout_marginStart="@dimen/common_padding_screen_half"
                android:scaleType="centerInside"
                android:src="@drawable/ic_menu_more"
                tools:ignore="ContentDescription" />

        </LinearLayout>

    </android.support.design.widget.CollapsingToolbarLayout>

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </WebView>


</LinearLayout>